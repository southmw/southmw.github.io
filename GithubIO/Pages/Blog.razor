    private readonly List<PostItem> posts = new()
    {
        new PostItem
        {
            Title = "Blazor WASM + GitHub Pages 배포 정리",
            Summary = "GitHub Actions로 자동 배포 파이프라인 구성 노트.",
            Url = "https://github.com/southmw/southmw.github.io/commits/master",
            Date = DateTime.Today.AddDays(-2),
            Tags = new [] { "blazor", "github-actions", "deploy" }
        },
        new PostItem
        {
            Title = "PWA와 다크모드 적용 메모",
            Summary = "서비스워커, 테마 토글, 접근성에 대한 간단 메모.",
            Url = "https://southmw.github.io",
            Date = DateTime.Today.AddDays(-1),
