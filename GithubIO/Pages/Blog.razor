@page "/blog"

<PageTitle>Blog</PageTitle>

<section class="container fade-in">
    <h1 class="mb-3">Blog</h1>
    <p class="text-muted">업데이트, 학습 노트, 기록을 공유합니다.</p>

    <div class="list-group mt-3">
        @foreach (var post in posts)
        {
            <a class="list-group-item list-group-item-action" href="@post.Url" target="_blank" rel="noopener">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@post.Title</h5>
                    <small class="text-muted">@post.Date.ToString("yyyy-MM-dd")</small>
                </div>
                <p class="mb-1">@post.Summary</p>
                <small class="text-muted">@string.Join(" · ", post.Tags)</small>
            </a>
        }
    </div>
</section>

